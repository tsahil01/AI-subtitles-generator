generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  provider  String
  accessTokens String
  isAdmin   Boolean
  premium   Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  files     File[]
  payments  Payment[]
}

model File {
  id        String   @id @default(cuid())
  name      String
  url       String
  type      String
  size      Int
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Payment {
  id        String   @id @default(cuid())
  userId    String
  amount    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiryDate DateTime
  user      User     @relation(fields: [userId], references: [id])
}